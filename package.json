{
  "name": "ghoststa",
  "description": "Responsive, minimalistic, clean and content-oriented theme, inspired by GitHub.",
  "license": "GPL-2.0",
  "version": "2.0.0",
  "author": {
    "name": "Kevin Hirczy",
    "email": "hello@nehalist.io",
    "url": "http://nehalist.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nehalist/ghoststa"
  },
  "bugs": {
    "url": "https://github.com/nehalist/ghoststa/issues"
  },
  "keywords": [
    "ghost",
    "blog",
    "theme",
    "minimalistic"
  ],
  "devDependencies": {
    "css-loader": "^0.28.11",
    "gscan": "^1.4.3",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.2",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.4.1",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0",
    "webpack-command": "^0.2.1"
  },
  "scripts": {
    "sasslint": "node_modules/.bin/sass-lint src/stylesheets/**/*.scss -v",
    "gscan": "node_modules/.bin/gscan .",
    "build:dev": "npm run clean && NODE_ENV=development node_modules/.bin/webpack",
    "build:prod": "npm run clean && NODE_ENV=production node_modules/.bin/webpack",
    "watch": "npm run build:dev -- --watch",
    "clean": "node_modules/.bin/rimraf assets/dist/**"
  },
  "config": {
    "posts_per_page": 10
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "primer": "^10.6.1"
  }
}
